<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.weathermaster.R" />
        <import type="android.view.View" />
        <variable
            name="city"
            type="String" />
        <variable
            name="currentWeather"
            type="com.example.weathermaster.data.apiservice.result.CurrentWeather" />
        <variable
            name="simbolTemp"
            type="String" />
        <variable
            name="forecast0"
            type="com.example.weathermaster.data.apiservice.result.CurrentForecast" />

        <variable
            name="forecast"
            type="java.util.List&lt;com.example.weathermaster.data.apiservice.result.CurrentForecast&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        tools:context=".ui.weather.WeatherFragment">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_title_top"
            android:text="@{city}"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            app:layout_constraintEnd_toStartOf="@+id/settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/tempCurrent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/current_temp_margin_top"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/title" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{currentWeather.temp}"
                android:textColor="@color/white"
                android:textSize="@dimen/current_temp_size" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{simbolTemp}"
                android:textColor="@color/white"
                android:textSize="@dimen/current_simbol_size"/>
        </LinearLayout>

        <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{currentWeather.description + "  " + forecast0.temp}'
            android:textColor="@color/white"
            android:textSize="@dimen/current_info_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tempCurrent" />

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="@dimen/current_ico_size"
            android:layout_height="wrap_content"
            app:showIcon="@{currentWeather.icon}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|fill_vertical"
            android:text='@{"Pressure "+currentWeather.pressure + "\nHumidity " + currentWeather.humidity + "\nWind: Speed "+ currentWeather.windSpeed+", Gust " + currentWeather.windGust}'
            android:textColor="@color/white"
            android:textSize="@dimen/current_content_size"
            android:visibility="@{currentWeather == null ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather_icon" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginEnd="@dimen/margin_image_horisontal"
            android:padding="@dimen/button_padding"
            android:src="@drawable/settings"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>